@using MyStore.Models.Models
@model Products

<form method="post" enctype="multipart/form-data">
    @* <input asp-for="Image" hidden /> *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>

        <div class="col-8">
            <div class="mb-3 row">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="mb-3 row">
                <label asp-for="Description" class="p-0"></label>
                <input asp-for="Description" disabled class="form-control" />
            </div>

            <div class="mb-3 row">
                <label asp-for="Price" class="p-0"></label>
                <input asp-for="Price" disabled class="form-control" />
            </div>

            @* <div class="mb-3 row">
                <label asp-for="Image" class="p-0"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div> *@

            <div class="mb-3 row">
                <label asp-for="CategoryId" class="p-0"></label>
                @* <input asp-for="CategoryId" class="form-control" /> *@
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" disabled class="form-select">
                    <option disabled selected>--Select Category</option>
                </select>
            </div>
        </div>

        <div class="col-3">
            <img src="~/@Model.Image" width="100%" />
        </div>

        <div class="mb-3 row">
            <label asp-for="isAvailable" class="p-0"></label>
            <input asp-for="isAvailable" disabled class="" type="checkbox" />
        </div>

        <div class="row row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>

